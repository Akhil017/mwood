// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id         String   @id @default(uuid())
  title      String   @unique
  year       Int
  imdbRating Float
  runtime    Int
  genre      String[]
  plot       String
  poster     String
  trailer    String
}

model Genre {
  id   String @id @default(uuid())
  name String @unique
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
}
