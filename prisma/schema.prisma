generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Movie{
  id String @id @default(uuid())
  title String
  year Int
  imdbRating Float
  runtime Int
  genre String[]
  plot String
  poster String
  trailer String
}

model Genre{
  id String @id @default(uuid())
  name String
}

